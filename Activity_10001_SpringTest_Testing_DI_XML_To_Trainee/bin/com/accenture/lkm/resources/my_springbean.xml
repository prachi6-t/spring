<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        >

	<bean id="addressObject" class="com.accenture.lkm.Address">
		<property name="addressLine1" value="HSR Layout, Sector1"></property><!-- Setter Injection  -->
		<property name="addressLine2" value="Bangalore, Karnataka"></property><!-- Setter Injection  -->
	</bean>

	<bean id="empObject" class="com.accenture.lkm.Employee">
		<property name="employeeId" value="1001"></property> <!-- Setter Injection  -->
		<property name="salary" value="200000"></property><!-- Setter Injection  -->
		<property name="employeeName" value="Jack"></property><!-- Setter Injection  -->
		
		<constructor-arg ref="addressObject" /> <!-- Constructor Injection  -->
		<!-- Setting List -->
		
		<property name="listProperty">
			
			<bean class="org.springframework.beans.factory.config.ListFactoryBean">
				<property name="targetListClass">
					<value>java.util.ArrayList</value>
				</property>
				
				<property name="sourceList">
					<list>
						<value type="java.lang.Integer">1</value>
						<ref bean="addressObject"/>
						<value type="java.lang.Integer">333</value>
					</list>
				</property>
			</bean>
			
		</property>
		
		<property name="setProperty">
			
			<bean class="org.springframework.beans.factory.config.SetFactoryBean">
				<property name="targetSetClass">
					<value>java.util.TreeSet</value>
				</property>
				<property name="sourceSet">
				    <!-- if type is not given then default type take is string 
				    and same is given to java class as it holding List of general Object type -->
					<list>
						<value type="java.lang.Integer">1</value>
						<value type="java.lang.Integer">212</value>
						<value type="java.lang.Integer">3</value>
					</list>
				</property>
			</bean>
			
		</property>
		
		<property name="mapProperty">
			
			<bean class="org.springframework.beans.factory.config.MapFactoryBean">
				<property name="targetMapClass">
					<value>java.util.HashMap</value>
				</property>
				<property name="sourceMap">
					<map>
						<entry key="Key1" value="1" />
						<entry key="Key2" value="2" />
						<entry key="Key3" value="3" />
					</map>
				</property>
			</bean>
			
		</property>
		
	</bean>
</beans>